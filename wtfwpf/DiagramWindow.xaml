<Window x:Class="wtfwpf.DiagramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wtfwpf"
        mc:Ignorable="d"
        Title="DiagramWindow" Height="400" Width="500">
    <Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!--diagram rajzolás helye-->
		<Canvas x:Name="canvas" Background="White" Grid.Row="0"/>
		<TextBlock x:Name="txtTotal" Grid.Row="1" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
	</Grid>
</Window>
